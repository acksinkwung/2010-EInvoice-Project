<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:id="@+id/acquireCertificateRelativeLayout">
  	<ImageView 
		android:layout_height="wrap_content" 
	    android:layout_width="wrap_content" 
	    android:src="@drawable/certificateframe"
	   	android:layout_centerInParent="true"
	   	
	    />
			<TextView 
				android:layout_centerHorizontal="True"
				android:textSize="28dip" 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:textColor="#FF0000"
			    android:text="領獎明細"
			    android:layout_marginTop="100dip"
			    />
			<TextView 
			    android:layout_height="wrap_content" 
			    android:textSize="24dip" 
			    android:layout_width="wrap_content" 
			    android:id="@+id/AcquireDialogItemDateTime"
			    android:layout_marginTop="200dip"
			    android:layout_marginLeft="30dip"
			    android:textColor="#000000"
			    />
			<TextView 
			    android:layout_height="wrap_content" 
			    android:textSize="24dip" 
			    android:layout_width="wrap_content" 
			    android:text="驗證碼:"
			    android:layout_marginLeft="30dip"
			    android:layout_below="@+id/AcquireDialogItemDateTime" 
			    android:id="@+id/AcquireCertificateNumberLabel"
			    android:textColor="#0000FF"
			    />
			<TextView 
			    android:layout_height="wrap_content" 
			    android:textSize="24dip" 
			    android:layout_width="wrap_content" 
			    android:id="@+id/AcquireDialogItemCertificateNumber"
			    android:layout_marginLeft="30dip"
			    android:layout_below="@+id/AcquireCertificateNumberLabel" 
			    android:textColor="#0000FF"
			    />
			<TextView 
				android:paddingBottom="10dip" 
			    android:layout_height="wrap_content" 
			    android:textSize="24dip"
			    android:layout_width="wrap_content" 
		        android:layout_below="@+id/AcquireDialogItemCertificateNumber" 
			    android:text="總金額:"
			    android:layout_marginLeft="30dip"
			    android:id="@+id/AcquireTotalMoneyLabel"
			    android:textColor="#000000"
			    />
			<TextView 
				android:paddingBottom="10dip" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
			    android:textSize="24dip"
			    android:id="@+id/AcquireDialogItemTotalMoney"
			    android:layout_below="@+id/AcquireDialogItemCertificateNumber" 
				android:layout_toRightOf="@+id/AcquireTotalMoneyLabel"
				android:textColor="#000000"
			    />
			<TextView 
				android:paddingBottom="10dip" 
			    android:layout_height="wrap_content" 
			    android:textSize="24dip" 
			    android:layout_width="wrap_content" 
		        android:layout_below="@+id/AcquireTotalMoneyLabel" 
			    android:text="稅後金額:"
			    android:layout_marginLeft="30dip"
			    android:id="@+id/AcquireTaxMoney"
			    android:textColor="#000000"
			    />
			<TextView 
				android:paddingBottom="10dip" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
			    android:textSize="24dip"
			    android:id="@+id/AcquireDialogItemTaxMoney"
			    android:layout_below="@+id/AcquireDialogItemTotalMoney"
			    android:layout_toRightOf="@+id/AcquireTaxMoney"
			    android:textColor="#000000"/>
</RelativeLayout>
