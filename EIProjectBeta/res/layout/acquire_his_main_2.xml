<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <ViewFlipper android:id="@+id/AcquireFlipper"  
       android:layout_width="fill_parent"    
       android:layout_height="fill_parent"  
       android:persistentDrawingCache="animation"  
       android:flipInterval="1000"  
       android:inAnimation="@anim/push_left_in"  
		android:outAnimation="@anim/push_left_out" >    
       <RelativeLayout
  		   xmlns:android="http://schemas.android.com/apk/res/android"
  		   android:layout_width="fill_parent"
           android:layout_height="fill_parent">   
			<TextView 
				android:layout_centerHorizontal="True"
				android:textSize="28dip" 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:textColor="#FF0099"
			    android:text="領獎明細"
			    />
			<TextView 
				android:paddingBottom="10dip" 
				android:paddingTop="56dip"
			    android:layout_height="wrap_content" 
			    android:textSize="24dip" 
			    android:layout_width="wrap_content" 
			    android:text="日期:"
			    android:id="@+id/HistoryDetailAcquireDateTimeLabel"
			    />
			<TextView 
				android:paddingBottom="10dip" 
				android:paddingTop="56dip"
			    android:layout_height="wrap_content" 
			    android:textSize="24dip" 
			    android:layout_width="wrap_content" 
			    android:id="@+id/HistoryDetailAcquireDialogItemDateTime"
			    android:layout_toRightOf="@+id/HistoryDetailAcquireDateTimeLabel"
			    />
			<TextView 
				android:paddingBottom="10dip" 
			    android:layout_height="wrap_content" 
			    android:textSize="24dip" 
			    android:layout_width="wrap_content" 
		        android:layout_below="@+id/HistoryDetailAcquireDialogItemDateTime" 
			    android:text="數量:"
			    android:id="@+id/HistoryDetailAcquireCountLabel"
			    />
			<TextView  
				android:paddingBottom="10dip" 
				android:textSize="24dip"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
			    android:id="@+id/HistoryDetailAcquireDialogItemCount"
			    android:layout_below="@+id/HistoryDetailAcquireDialogItemDateTime" 
			    android:layout_toRightOf="@+id/HistoryDetailAcquireCountLabel"
			    />
			<TextView 
				android:paddingBottom="10dip" 
			    android:layout_height="wrap_content" 
			    android:textSize="24dip"
			    android:layout_width="wrap_content" 
		        android:layout_below="@+id/HistoryDetailAcquireDialogItemCount" 
			    android:text="總金額:"
			    android:id="@+id/HistoryDetailAcquireTotalMoneyLabel"
			    />
			<TextView 
				android:paddingBottom="10dip" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
			    android:textSize="24dip"
			    android:id="@+id/HistoryDetailAcquireDialogItemTotalMoney"
			    android:layout_below="@+id/HistoryDetailAcquireDialogItemCount"
				android:layout_toRightOf="@+id/HistoryDetailAcquireTotalMoneyLabel"
			    />
			<TextView 
				android:paddingBottom="10dip" 
			    android:layout_height="wrap_content" 
			    android:textSize="24dip" 
			    android:layout_width="wrap_content" 
		        android:layout_below="@+id/HistoryDetailAcquireDialogItemTotalMoney" 
			    android:text="稅後金額:"
			    android:id="@+id/HistoryDetailAcquireTaxMoney"
			    />
			<TextView 
				android:paddingBottom="10dip" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
			    android:textSize="24dip"
			    android:id="@+id/HistoryDetailAcquireDialogItemTaxMoney"
			    android:layout_below="@+id/HistoryDetailAcquireDialogItemTotalMoney"
			    android:layout_toRightOf="@+id/HistoryDetailAcquireTaxMoney"/>
			<Button       
    			android:layout_width="wrap_content"   
    			android:layout_height="wrap_content"
    			android:id="@+id/ItemHistoryDetailAcquireRight31"  
  				android:layout_alignParentRight="true"
  				android:layout_alignParentBottom="true"
  				android:paddingTop="10dip"
				android:paddingBottom="10dip" 
				android:paddingLeft="12dip"
				android:paddingRight="12dip"
  				android:background="@drawable/right"
    		/>     
       </RelativeLayout>  
       
	   <RelativeLayout
  		   xmlns:android="http://schemas.android.com/apk/res/android"
  		   android:layout_width="fill_parent"
           android:layout_height="fill_parent">
      	   <TextView 
			    android:textSize="28dip" 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:id="@+id/tvHistoryDetailAcquireMenuTitle"
			    android:paddingTop="12dip"
				android:paddingBottom="12dip" 
				android:paddingLeft="12dip"
				android:paddingRight="12dip"
			    android:textColor="#FFFFFF"
	       />

		   <ListView android:layout_width="fill_parent"   
        		android:layout_height="wrap_content"   
        		android:layout_below="@+id/tvHistoryDetailAcquireMenuTitle" 
        		android:id="@+id/HistoryDetailAcquireMenuListView"  
           /> 
           <Button       
    			android:layout_width="wrap_content"   
    			android:layout_height="wrap_content"
    			android:id="@+id/ItemHistoryDetailAcquireLeft32"  
  				android:layout_alignParentLeft="true"
  				android:layout_alignParentBottom="true"
  				android:paddingTop="12dip"
				android:paddingBottom="12dip" 
				android:paddingLeft="12dip"
				android:paddingRight="12dip"
  				android:background="@drawable/left"
    	  />     
      </RelativeLayout>   
           
    </ViewFlipper>   
  
  
</RelativeLayout>
