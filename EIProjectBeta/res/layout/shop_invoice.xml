<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	android:id="@+id/shopInvoiceRelativeLayout" 
	android:layout_width="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_height="fill_parent" 
	android:paddingBottom="10dip" 
	android:paddingLeft="12dip"
	android:paddingRight="12dip">
	<ImageView 
		android:layout_height="wrap_content" 
	    android:layout_width="wrap_content" 
	    android:src="@drawable/invoiceframe"
	   	android:layout_centerInParent="true"
	   	
	    />
	<TextView 
		android:textSize="24dip" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:textColor="#FFFFFF"
	    android:text="發票明細"
	    android:layout_marginTop="50dip"
	    android:layout_centerHorizontal="true"
	    />
	<TextView 
		android:textSize="24dip" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="全家便利商店"
	    android:id="@+id/shop_invoice_storeName"
	    android:layout_below="@+id/shop_invoice_invoiceNumber"
	    
	    android:layout_centerHorizontal="true"
	    android:textColor="#000000"
	    />
	
	<TextView 
		android:textSize="24dip" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="AB123456789"
	    android:id="@+id/shop_invoice_invoiceNumber"
		android:layout_marginTop="150dip"
	    android:layout_centerHorizontal="true"
	    android:textColor="#000000"
	    />
	<TextView 
		android:textSize="24dip" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="2010/10/25 20:08:40"
	    android:id="@+id/shop_invoice_datetime"
	    
	    android:layout_marginLeft="40dip"
	    android:layout_marginTop="450dip"
	    android:textColor="#07AEEA"
	    />
    <TextView 
		android:layout_centerInParent="true"
		android:textSize="24dip" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="$350"
	    android:id="@+id/shop_invoice_money"
	    android:layout_below="@+id/shop_invoice_storeName"
	    android:layout_marginLeft="100dip"
	    android:textColor="#000000"
	    />
</RelativeLayout>
