<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	android:id="@+id/RelativeLayout01" 
	android:layout_width="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_height="wrap_content" 
	android:paddingBottom="4dip" 
	android:paddingLeft="12dip"
	android:paddingRight="12dip">
	<TextView 
		android:textSize="24dip" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:id="@+id/ItemAcquireInvoiceNumber"
	    android:layout_below="@+id/ItemAcquireDateTime"
	    android:textColor="#FFFFFF"
	    />
	<TextView 
		android:textSize="24dip" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:id="@+id/ItemAcquireInvoiceNumberLight"
	    android:layout_toRightOf="@+id/ItemAcquireInvoiceNumber"
	    android:layout_below="@+id/ItemAcquireDateTime"
	    android:textColor="#FF9900"
	    />

	<TextView 
	    android:paddingTop="12dip"
	    android:layout_height="wrap_content" 
	    android:textSize="12dip" 
	    android:layout_width="wrap_content" 
	    android:id="@+id/ItemAcquireDateTime"
	    />
	<ImageView       
    	android:layout_width="wrap_content"   
    	android:layout_height="wrap_content"
    	android:id="@+id/ItemAcquireStatus"  
    	android:layout_toRightOf="@+id/ItemAcquireInvoiceNumberLight"
    	android:layout_below="@+id/ItemAcquireDateTime"
    /> 
</RelativeLayout>